<Window x:Class="firstWapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:firstWapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="240">


    <StackPanel Background="#00BBD2" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center" 
                Width="240" 
                Height="450">
        <TextBlock Height="45" ></TextBlock>
        <TextBlock HorizontalAlignment="Center" ><Image Height="100"  Source="picl.PNG" Width="100"/> </TextBlock>
        <TextBlock Foreground="White" HorizontalAlignment="Center" FontSize="28" FontFamily="Calibri Light" >SignIn</TextBlock>
        <TextBlock HorizontalAlignment="Center">Speak, friend, and enter</TextBlock>
        <TextBlock Height="80"></TextBlock>
        <TextBox Width="180" Text="Email"></TextBox>
        <TextBlock ></TextBlock>
        <TextBox Width="180" Text="Password"></TextBox>
        <TextBlock Height="40"></TextBlock>
        <Button Background="Black" Foreground="White" Width="180" Content="SIGN IN"></Button>
        <TextBlock ></TextBlock>
    </StackPanel>
</Window>
